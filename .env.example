# ============================================
# .env.example — Variáveis para rodar localmente
# ============================================
# Copie para .env e preencha os valores.
# Template completo: docs/env_production_template.txt

# Django
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Database (Docker: postgres://trader_user:SENHA@postgres:5432/trader_portal)
DATABASE_URL=postgres://trader_user:postgres@postgres:5432/trader_portal

# Celery (Docker: redis://redis:6379/0)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Mercado Pago (opcional para dev)
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_BACK_URL=http://localhost:8000/pagamentos/retorno/
MERCADOPAGO_WEBHOOK_URL=

# Discord (opcional para dev)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/discord/callback/
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# OpenAI (opcional para análise IA)
OPENAI_API_KEY=
OPENAI_ANALYTICS_MODEL=gpt-4o-mini

# PostgreSQL (para docker-compose)
POSTGRES_DB=trader_portal
POSTGRES_USER=trader_user
POSTGRES_PASSWORD=postgres
